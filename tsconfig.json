{
  "compilerOptions": {
    "target": "ESNext",                               
    "module": "commonjs",                             
    "resolveJsonModule": true,                       
    "outDir": "./dist",                              
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                
    "skipLibCheck": true,  
    "baseUrl": "./src",                              
    "paths": {
      "@/*": ["*"]
    }
  },
}